@model IEnumerable<PoC.Models.AccessLogin>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de logins</h1>

<p>
    <input type="button" id="buttonCreateUser" value="Crear nuevo login" onclick="location.href='@Url.Action("Create", "AccessLogins")'" />

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlataformLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPlatform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlataformLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPlatform)
            </td>
            <td>
               <input id="divPass" type="password" readonly=true value= @Html.DisplayFor(modelItem => item.Password)></input>
                   
                show <input type="checkbox" name="mycheckbox" id="ckShowPass" onclick="myshowp(this)" />
                <script>
                    function myshowp(e) {
                        txtBox = $('#divPass')
                        if (e.checked) {
                            txtBox.attr("Type", "Text");
                        }
                        else {
                            txtBox.attr("Type", "Password");
                        }
                    }
                </script>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.PlataformLink"><img id="iconCrud" src="https://cdn-icons-png.flaticon.com/512/54/54324.png"/></a> |
                <a asp-action="Edit" asp-route-id="@item.IdAccessLogin"><img id="iconCrud" src="https://cdn-icons-png.flaticon.com/512/1159/1159633.png"/></a> |
                <a asp-action="Details" asp-route-id="@item.IdAccessLogin"><img id="iconCrud" src="https://cdn-icons-png.flaticon.com/512/751/751463.png"/></a> |
            </td>
        </tr>
}
    </tbody>
</table>
